@code{
    private string curentUrl;


    protected override void OnInitialized()
    {
        curentUrl = Navigation.Uri; 
    }

    private string GetIconClass(string page)
    {
        return curentUrl.Contains(page) ? "active-icon" : "inactive-icon";
    }

    private void NavigateTo(string url)
    {
        Navigation.NavigateTo(url);
    }
